<div class = main-background>
  <section class="container">
    <div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-4">
      <%@listings.each do |listing|%>
        <div class="col mb-4">
          <div class="card border-dark h-100" style = "background-color:  #ffe24e">
            <%if listing.picture.attached?%>
              <%=image_tag listing.picture, alt: listing.title, class:"card-img-top"%>
            <%else%>
              <%=image_tag "look-at-this.jpg", alt: "hang gesture", class:"card-img-top"%>
            <%end%>
              <div class="card-body">
                <h5><%=listing.title%></h5>
                  <p class="card-text text-secondary"><%=listing.description%></p>
                  <div class='d-flex justify-content-between'> 
                <%=link_to "See More", listing_path(listing.id), class: "btn btn-outline-primary"%>
                <h5><%=format_price(listing.price)%></h5>
                </div>
                </div>
              </div>
            </div>
      <%end%>
    </div>
  </section>
</div>